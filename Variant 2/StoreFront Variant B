import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.control.Button;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.layout.GridrPane;
import javafx.scene.layout.HBox;
import javafx.stage.Stage;

public class StoreFront extends Application {

    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("Sally's Sheds and Pet Rocks");

        // Create a layout
        BorderPane layout = new BorderPane();

        // Add an image of a shed and a pet rock
        ImageView imageView = new ImageView(new Image("shed_and_pet_rock_image.jpg"));
        layout.setCenter(imageView);

        // Create buttons for browsing sheds and pet rocks
        Button browseShedsButton = new Button("Browse Sheds");
        Button browsePetRocksButton = new Button("Browse Pet Rocks");

        // Handle button actions
        browseShedsButton.setOnAction(event -> {
            // Add your code to navigate to the sheds page
            System.out.println("Redirect to Sheds page");
        });

        browsePetRocksButton.setOnAction(event -> {
            // Add your code to navigate to the pet rocks page
            System.out.println("Redirect to Pet Rocks page");
        });

        // Create an HBox to hold the buttons
        HBox buttonBox = new HBox(20);
        buttonBox.getChildren().addAll(browseShedsButton, browsePetRocksButton);
        buttonBox.setPadding(new Insets(20, 0, 0, 0));
        buttonBox.setStyle("-fx-alignment: center;");

        // Add the button box to the layout
        layout.setBottom(buttonBox);

        // Create a scene and add it to the stage
        Scene scene = new Scene(layout, 800, 600);
        primaryStage.setScene(scene);

        // Show the stage
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
