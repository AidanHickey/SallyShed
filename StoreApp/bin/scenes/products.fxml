<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="800.0" prefWidth="1290.0" stylesheets="@styles/shared.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ProductsController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #EEA47F;" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="TOP_RIGHT" prefWidth="1125.0" styleClass="top-header" stylesheets="@styles/shared.css">
                     <children>
                        <ImageView fitHeight="144.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/sun.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Products">
                           <font>
                              <Font name="Corbel Light" size="24.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="15.0" />
                           </VBox.margin>
                        </Label>
                        <VBox fx:id="productList" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <padding>
                              <Insets top="15.0" />
                           </padding>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <fx:include source="Navigation.fxml" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
</BorderPane>
